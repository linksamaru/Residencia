{% extends "::base.html.twig" %}

{% block title %}Actualización de Contraseña{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('stylesheets/indexMarcos.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}
    {% block body %}
        <div class="container">
            <h1>Formulario de Cambiar contraseña</h1>
            {% if errs != null %}
             <strong>{{errs}}</strong><br>
            {% endif %}
            <form action="{{url('cambiar_contrasena')}}" method="POST">
                {{form_widget(form)}}
                <input type="submit" value="Actualizar"/>
            </form>
                
                {% if admin!=1 %}        
                    <a href="{{url('ver_perfil')}}" class="btn-form">Volver a perfil</a><br>
                {% else %}
                    <a href="{{url('_ver_panel_control')}}" class="btn-form">Volver a panel de control</a><br>
                {% endif %}
        </div>
    {% endblock %}